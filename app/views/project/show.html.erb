<div class="row">
	<div class="col-m4">
		<div class="card z-depth-2">
			<div class="center">
				<h3>â‚¬<%= @project.price %></h3>
			</div>

			<div class="card-action center">
				<button class="btn waves-effect waves-light pink darken-2">
					Take this project
				</button>
			</div>
		</div>
	</div>

	<div class="col-m8">
		<div class="card z-depth-2">
			<div class="card-image">
				<p><%= image_tag @project.image %></p>
			</div>
			<div class="card-content grey-text text-darken-4">
				<h5><%= @project.name %></h5>
				<hr>
				<%= @project.content %>
			
				<div class="collection">
					<% @tasks.each do |task| %>
						<% if task.header %>
							<div class="collection-item active">
								<i class="mdi-social-school"><%= task.title %></i>
							</div>
						<% else %>
							<%= link_to [task.project, task], class: "collection-item" do %>
								<%= task.note %>
							<% end %>
						<% end %>
					<% end %>
				</div>
			</div>
		</div>
	</div>	
</div>


